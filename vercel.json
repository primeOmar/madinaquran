{
  "version": 2,
  "builds": [
    {
      "src": "package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "build": {
    "env": {
      "VITE_API_URL": "https://madina-quran-backend.onrender.com",
      "VITE_APP_NAME": "Madina Quran School",
      "VITE_NODE_ENV": "production"
    }
  },
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/stats",
      "dest": "https://madina-quran-backend.onrender.com/api/student/stats"
    },
    {
      "src": "/classes", 
      "dest": "https://madina-quran-backend.onrender.com/api/student/classes"
    },
    {
      "src": "/assignments",
      "dest": "https://madina-quran-backend.onrender.com/api/student/assignments"
    },
    {
      "src": "/payments",
      "dest": "https://madina-quran-backend.onrender.com/api/student/payments"
    },
    {
      "src": "/teacher-check",
      "dest": "https://madina-quran-backend.onrender.com/api/student/teacher-check"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}

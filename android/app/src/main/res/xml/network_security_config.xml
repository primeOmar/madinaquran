        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">madinaquranclasses.com</domain>
        <domain includeSubdomains="true">madina-quran-backend.onrender.com</domain>
        <domain includeSubdomains="true">supabase.co</domain>
        <domain includeSubdomains="true">agora.io</domain>
        <domain includeSubdomains="true">agoralab.co</domain>
    </domain-config>
</network-security-config>